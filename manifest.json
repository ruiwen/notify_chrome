{
  "manifest_version": 2,

  "name": "Notify",
  "version": "0.13",
  "description": "Receive notifications from your Android phone right on your computer via Chrome",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "128": "icon_128.png"
  },

  "app": {
    "background": {
      "scripts": [
        "lib/encoding.js",
        "lib/md5.js",
        "js/background.js"
        ],
      "persistent": true
    }
  },

  "permissions": [
    "notifications",
    "storage",
    {"socket": [
      "udp-bind:0.0.0.0:*",
      "udp-send-to::*"
    ]}
  ]
}
